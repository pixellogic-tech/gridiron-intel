{
  "name": "gridiron-intel",
  "version": "1.0.0",
  "description": "AI-powered football analytics platform that makes Hudl obsolete",
  "private": true,
  "author": "GridironIntel Team <team@gridiron-intel.com>",
  "license": "PROPRIETARY",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:api": "turbo run dev --filter=@gridiron/api",
    "dev:web": "turbo run dev --filter=@gridiron/web",
    "dev:mobile": "turbo run dev --filter=@gridiron/mobile",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "npm run -w @gridiron/database migrate",
    "db:seed": "npm run -w @gridiron/database seed",
    "db:reset": "npm run -w @gridiron/database reset",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "setup": "./scripts/setup.sh",
    "deploy": "./scripts/deploy.sh",
    "analyze": "npm run analyze:bundle && npm run analyze:deps",
    "analyze:bundle": "turbo run analyze",
    "analyze:deps": "npx depcheck",
    "release": "changeset publish",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}